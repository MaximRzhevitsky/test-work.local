@import "../variables-and-mixins.pcss";

.section-test-two {
	background-color: rgb(0 0 0 / 15%);
	padding: 40px 0;

	.wrapper {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-between;

		.img {
			margin-bottom: 20px;
		}

		.text {
			width: 100%;

			@media (--lg) {
				width: 48%;
			}

			p {
				&:last-child {
					margin-bottom: 0;
				}
			}
		}

		.image {
			width: 100%;

			@media (--lg) {
				width: 48%;
			}
		}
	}
}

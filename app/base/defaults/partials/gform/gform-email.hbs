{{! Garvity forms Email Field component https://docs.gravityforms.com/email-field/ https://docs.gravityforms.com/validation-errors/ }}

<div
	class="gfield gfield_email {{gformFieldErrorClass showError}} {{gformAddCustomClass
		customClass}} {{gformRequiredClass
		required}}  field_sublabel_below field_description_below {{gformHideLabel
		hideLabel}} gfield_visibility_visible">
	<label class="gfield_label" for="input_{{gFormIndex}}_{{gFormFieldIndex true}}">
		{{labelText}}{{#with required}}<span class="gfield_required">*</span>{{/with}}
	</label>
	<div class="ginput_container ginput_container_email">
		{{#if enableConfirmation}}
			<span id="input_{{gFormIndex}}_{{gFormFieldIndex}}_1_container" class="ginput_left">
				<input
					class=""
					type="text"
					name="input_{{gFormFieldIndex}}"
					id="input_{{gFormIndex}}_{{gFormFieldIndex}}"
					value=""
					aria-required="true"
					aria-invalid="false"
				>
				<label for="input_{{gFormIndex}}_{{gFormFieldIndex}}">
					{{#if enterEmailLabel}}
						{{enterEmailLabel}}
					{{else}}
						Enter Email
					{{/if}}
				</label>
      		</span>
			<span id="input_{{gFormIndex}}_{{gFormFieldIndex}}_2_container" class="ginput_right">
				<input
					class=""
					type="text"
					name="input_{{gFormFieldIndex}}_2"
					id="input_{{gFormIndex}}_{{gFormFieldIndex}}_2"
					value=""
					aria-required="true"
					aria-invalid="false"
				>
				<label for="input_{{gFormIndex}}_{{gFormFieldIndex}}_2">
					{{#if confirmEmailLabel}}
						{{confirmEmailLabel}}
					{{else}}
						Confirm Email
					{{/if}}
				</label>
      		</span>
			<div class="gf_clear gf_clear_complex"></div>
		{{else}}
			<input
				name="input_{{gFormFieldIndex}}"
				id="input_{{gFormIndex}}_{{gFormFieldIndex}}"
				type="text" value="{{defaultValue}}"
				class="{{fieldSize}}"
				placeholder="{{placeholderText}}"
				aria-required="{{gformIsRequired required}}"
				aria-invalid="false"
			>
		{{/if}}
	</div>
	{{#if descriptionText}}
		<div class="gfield_description">{{descriptionText}}</div>
	{{/if}}
	{{#if showError}}
		<div class="gfield_description validation_message">
			{{#if customValidationText}}
				{{customValidationText}}
			{{else}}
				This field is required.
			{{/if}}
		</div>
	{{/if}}
</div>

@import "../../../../../src/styles/variables-and-mixins.pcss";

.blog-categories {
	display: flex;
	flex-wrap: wrap;
	gap: 5px 10px;

	&_link {
		@include text-style-text-text-2;

		color: #aaa;
		padding: 2px 11px;
		border: 1px solid #aaa;
		position: relative;
		z-index: 1;
		transition: 0.3s;

		&:hover {
			background: #f3f3f3;
			border: 1px solid #f3f3f3;
			text-decoration: none;
		}
	}
}
